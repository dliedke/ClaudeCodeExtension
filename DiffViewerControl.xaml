<UserControl x:Class="ClaudeCodeVS.DiffViewerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             Focusable="True">

    <UserControl.Resources>
        <!-- Diff line colors -->
        <SolidColorBrush x:Key="AddedLineBackground" Color="#1E3A1E"/>
        <SolidColorBrush x:Key="RemovedLineBackground" Color="#3A1E1E"/>
        <SolidColorBrush x:Key="AddedLineForeground" Color="#4EC94E"/>
        <SolidColorBrush x:Key="RemovedLineForeground" Color="#E94E4E"/>

        <!-- Light theme diff colors -->
        <SolidColorBrush x:Key="AddedLineBackgroundLight" Color="#E6FFE6"/>
        <SolidColorBrush x:Key="RemovedLineBackgroundLight" Color="#FFE6E6"/>
        <SolidColorBrush x:Key="AddedLineForegroundLight" Color="#22863A"/>
        <SolidColorBrush x:Key="RemovedLineForegroundLight" Color="#B31D28"/>

        <!-- Search highlight colors -->
        <SolidColorBrush x:Key="SearchHighlightBackground" Color="#FFFF00"/>
        <SolidColorBrush x:Key="SearchHighlightBackgroundDark" Color="#605000"/>
        <SolidColorBrush x:Key="SearchCurrentHighlight" Color="#FF8C00"/>
        <SolidColorBrush x:Key="SearchCurrentHighlightDark" Color="#804600"/>

        <!-- Virtualized diff line item container style -->
        <Style x:Key="DiffLineContainerStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Expander button style -->
        <Style x:Key="ExpanderButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header toggle icon button style -->
        <Style x:Key="HeaderToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="toggleBorder"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="2">
                            <Grid Width="16" Height="16">
                                <!-- Expand (outward arrows) -->
                                <Grid x:Name="ExpandIcon">
                                    <Line X1="2" Y1="8" X2="14" Y2="8"
                                          Stroke="{TemplateBinding Foreground}"
                                          StrokeThickness="1.5"/>
                                    <Path Fill="{TemplateBinding Foreground}"
                                          Data="M5,2 H11 L8,5 Z"/>
                                    <Path Fill="{TemplateBinding Foreground}"
                                          Data="M8,11 L11,14 H5 Z"/>
                                </Grid>

                                <!-- Collapse (inward arrows) -->
                                <Grid x:Name="CollapseIcon" Visibility="Collapsed">
                                    <Line X1="2" Y1="8" X2="14" Y2="8"
                                          Stroke="{TemplateBinding Foreground}"
                                          StrokeThickness="1.5"/>
                                    <Path Fill="{TemplateBinding Foreground}"
                                          Data="M8,2 L11,5 H5 Z"/>
                                    <Path Fill="{TemplateBinding Foreground}"
                                          Data="M5,11 H11 L8,14 Z"/>
                                </Grid>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="toggleBorder" Property="Background" Value="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarHoverOverSelectedKey}}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ExpandIcon" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CollapseIcon" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="ExpandIcon" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="CollapseIcon" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="ToolTip" Value="Collapse all diffs"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="False">
                    <Setter Property="ToolTip" Value="Expand all diffs"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Search button style -->
        <Style x:Key="SearchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="searchBorder"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="searchBorder" Property="Background" Value="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarHoverOverSelectedKey}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Auto-scroll toggle button style -->
        <SolidColorBrush x:Key="AutoScrollActiveBackground" Color="#3078D7"/>
        <SolidColorBrush x:Key="AutoScrollActiveForeground" Color="White"/>
        <Style x:Key="AutoScrollToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="autoScrollBorder"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="autoScrollBorder" Property="Background" Value="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarHoverOverSelectedKey}}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="autoScrollBorder" Property="Background" Value="{StaticResource AutoScrollActiveBackground}"/>
                                <Setter Property="Foreground" Value="{StaticResource AutoScrollActiveForeground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="MainGrid"
          KeyboardNavigation.TabNavigation="Local"
          Focusable="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBackgroundKey}}"
                BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBorderKey}}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="SummaryText"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Text="No changes detected"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="AdditionsText"
                               VerticalAlignment="Center"
                               Foreground="#4EC94E"
                               FontWeight="SemiBold"
                               Margin="0,0,8,0"/>
                    <TextBlock x:Name="DeletionsText"
                               VerticalAlignment="Center"
                               Foreground="#E94E4E"
                               FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="8,0,0,0">
                    <!-- Search button -->
                    <Button x:Name="SearchButton"
                            Style="{StaticResource SearchButtonStyle}"
                            ToolTip="Find"
                            Click="SearchButton_Click">
                        <Grid Width="16" Height="16">
                            <!-- Magnifying glass icon -->
                            <Ellipse Width="10" Height="10"
                                     Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                     StrokeThickness="1.5"
                                     HorizontalAlignment="Left" VerticalAlignment="Top"
                                     Margin="1,1,0,0"/>
                            <Line X1="9" Y1="9" X2="14" Y2="14"
                                  Stroke="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                  StrokeThickness="1.5"/>
                        </Grid>
                    </Button>
                    <ToggleButton x:Name="AutoScrollButton"
                                  Style="{StaticResource AutoScrollToggleButtonStyle}"
                                  ToolTip="Auto-scroll to latest changes"
                                  IsChecked="False"
                                  Checked="AutoScrollButton_Checked"
                                  Unchecked="AutoScrollButton_Unchecked">
                        <TextBlock Text="&#x2193;&#x2193;" FontWeight="Bold" FontSize="12"
                                   Foreground="{Binding RelativeSource={RelativeSource AncestorType=ToggleButton}, Path=Foreground}"/>
                    </ToggleButton>
                    <ToggleButton x:Name="ExpandCollapseAllButton"
                                  Style="{StaticResource HeaderToggleButtonStyle}"
                                  IsChecked="False"
                                  Checked="ExpandCollapseAllButton_Checked"
                                  Unchecked="ExpandCollapseAllButton_Unchecked"/>
                </StackPanel>

                <Button x:Name="ResetBaselineButton"
                        Grid.Column="3"
                        Content="Reset"
                        Padding="8,2"
                        Margin="8,0,0,0"
                        ToolTip="Reset baseline to current workspace state"
                        Click="ResetBaselineButton_Click"/>
            </Grid>
        </Border>

        <!-- Search bar -->
        <Border x:Name="SearchBar"
                Grid.Row="1"
                Background="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBackgroundKey}}"
                BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBorderKey}}"
                BorderThickness="0,0,0,1"
                Padding="8,4"
                Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="SearchTextBox"
                         Grid.Column="0"
                         Padding="4,2"
                         VerticalContentAlignment="Center"
                         TextChanged="SearchTextBox_TextChanged"
                         KeyDown="SearchTextBox_KeyDown"/>

                <TextBlock x:Name="SearchResultsText"
                           Grid.Column="1"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource {x:Static vsshell:VsBrushes.GrayTextKey}}"
                           Margin="8,0,0,0"
                           Text=""/>

                <Button x:Name="SearchPrevButton"
                        Grid.Column="2"
                        Style="{StaticResource SearchButtonStyle}"
                        ToolTip="Previous match (Shift+Enter)"
                        Click="SearchPrevButton_Click"
                        Margin="4,0,0,0">
                    <TextBlock Text="&#x25B2;" FontSize="10"
                               Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                </Button>

                <Button x:Name="SearchNextButton"
                        Grid.Column="3"
                        Style="{StaticResource SearchButtonStyle}"
                        ToolTip="Next match (Enter)"
                        Click="SearchNextButton_Click"
                        Margin="2,0,0,0">
                    <TextBlock Text="&#x25BC;" FontSize="10"
                               Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                </Button>

                <Button x:Name="SearchCloseButton"
                        Grid.Column="4"
                        Style="{StaticResource SearchButtonStyle}"
                        ToolTip="Close (Escape)"
                        Click="SearchCloseButton_Click"
                        Margin="4,0,0,0">
                    <TextBlock Text="&#x2715;" FontSize="10"
                               Foreground="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"/>
                </Button>
            </Grid>
        </Border>

        <!-- Empty state -->
        <TextBlock x:Name="EmptyStateText"
                   Grid.Row="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="{DynamicResource {x:Static vsshell:VsBrushes.GrayTextKey}}"
                   FontStyle="Italic"
                   Text="No changes detected"
                   Visibility="Visible"/>

        <!-- File list -->
        <ScrollViewer Grid.Row="2"
                      x:Name="FileListScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      PreviewMouseWheel="FileListScrollViewer_PreviewMouseWheel"
                      Visibility="Collapsed">
            <StackPanel x:Name="FileListPanel">
                <StackPanel.LayoutTransform>
                    <ScaleTransform x:Name="ZoomTransform" ScaleX="1" ScaleY="1"/>
                </StackPanel.LayoutTransform>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
